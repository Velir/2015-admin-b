@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
	var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
	rendering.Class = "sc-AchievementUserList";
	rendering.Requires.Script("client", "AchievementUserList.js");

	var htmlAttributes = rendering.HtmlAttributes;
}

<div @htmlAttributes>
<link href="/sitecore/shell/themes/standard/default/Grid.css" rel="stylesheet">
<div>
	<div class="sc-listcontrol-body">
		<table class="sc-table table">
			<tbody data-bind="foreach: output">
				<tr class="Row">
					<td colspan="1" class="DataCell">
						<div data-bind="text:Name"></div>
					</td>
					<td colspan="2" class="DataCell">
						<div data-bind="foreach:Achievements">
							<div style="float:left;margin:10px;" data-bind="html:Image"></div>
						</div>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
</div>